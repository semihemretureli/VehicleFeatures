<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="car_info"
            type="com.semih.vehiclefeatures.CarInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CarInfoActivity">

        <TextView
            android:id="@+id/tv_brand"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:text="@{car_info.brand}"
            android:textAlignment="center"
            android:textColor="#3949AB"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:text="@{car_info.model}"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_brand"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_motor_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="@{car_info.motorType}"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_model"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_max_speed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{car_info.maxSpeed}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_motor_type"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_zero_To_Hundred_Speed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{car_info.zeroToHundredSpeed}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_max_speed"
            tools:ignore="MissingConstraints" />
        <TextView
        android:id="@+id/tv_gear_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@{car_info.gearType}"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_zero_To_Hundred_Speed"
        tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_wheel_size"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{car_info.wheelSize}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_gear_type"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_body_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{car_info.bodyType}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_wheel_size"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_energy_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{car_info.energyType}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_body_type"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_body_weight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{String.valueOf(car_info.bodyWeight)}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_energy_type"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_production_years"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{car_info.productionYears}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_body_weight"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_euro_ncap_Point"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{Integer.toString(car_info.euroNcapPoint)}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_production_years"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/tv_pull_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@{car_info.pullType}"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_euro_ncap_Point"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>